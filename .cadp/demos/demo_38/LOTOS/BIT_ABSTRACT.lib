(*
 * data type defining bits abstracted to a single value; this type is
 * an abstraction of the BIT type defined in BIT_CONCRETE.lib (the two
 * values 0 and 1 are collapsed to a single value)
 *)

type BIT is BOOLEAN
   sorts BIT
   opns 0 (*! constructor *) : -> BIT 
        1 : -> BIT
   eqns
      ofsort BIT
         1 = 0;
endtype

